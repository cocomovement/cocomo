<p id="notice"><%= notice %></p>

<h1>Instructor Profiles</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Class</th>
      <th>Schedule</th>
      <th>Location</th>
      <th>Bio</th>
      <th>Excerpt</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @instructor_profiles.each do |instructor_profile| %>
      <tr>
        <td><%= instructor_profile.name %></td>
        <td><%= instructor_profile.class %></td>
        <td><%= instructor_profile.schedule %></td>
        <td><%= instructor_profile.location %></td>
        <td><%= instructor_profile.bio %></td>
        <td><%= instructor_profile.excerpt %></td>
        <td><%= link_to 'Show', instructor_profile %></td>
        <td><%= link_to 'Edit', edit_instructor_profile_path(instructor_profile) %></td>
        <td><%= link_to 'Destroy', instructor_profile, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

